// tsconfig.json
{
    "compilerOptions": {
        "target": "ESNext", // O una versión reciente de ECMAScript (Ej: ES2020)
        "module": "ESNext", // O "NodeNext" si trabajas más puramente con Node.js en el backend
        "jsx": "react-jsx",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "bundler", // Importante para Vite
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "paths": {
            "@/*": ["./src/*"] // Si usas alias como `@/components`
        }
    },
    "include": ["src", "vite.config.ts", "jest.config.ts"] // Asegúrate de incluir tus archivos de configuración
}
